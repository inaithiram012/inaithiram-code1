<div class="container-fluid">
  <div class="inner-text-container overflow-hidden">
    <div class="heading-container">
      <h2 class="centered-heading2 centered-heading" style="color: {{ section.settings.heading1_color }}">{{ section.settings.centered_text_heading_1 }}</h2>
      <h2 class="centered-heading1 centered-heading" style="color: {{ section.settings.heading2_color }}">{{ section.settings.centered_text_heading_2 }}</h2>
    </div>
{{ section.settings.centered_text_content }}
</div>
</div>
{% schema %}
  {
    "name": "Centered Text",
    "settings": [
      {
        "type":"text",
        "id":"centered_text_heading_1",
        "label":"Heading 1"
      },
      {
        "type": "color",
        "id": "heading1_color",
        "label": "Heading2 Color",
        "default": "#0e2257"
      },
       {
        "type":"text",
        "id":"centered_text_heading_2",
        "label":"Heading 2"
      }, 
      {
        "type": "color",
        "id": "heading2_color",
        "label": "Heading2 Color",
        "default": "#0e2257"
      },
      {
        "type":"richtext",
        "id": "centered_text_content",
        "label":"Content"
      }
    ],
    "presets":[
    {
      "name": "Text only Section"
    }
    ]
  }
{% endschema %}