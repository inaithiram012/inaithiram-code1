{% comment %} "is" means inaithiram-swatch {% endcomment %}
<div class="inaithiram-swatch">
  <div class="is_title">{{ option.name }}:</div>
  <div class="position-relative">
    {% if option.values.size > 1 %}
      <div class="is_active_container">
        <div class="m-0 is_color is_active" style="background-color:{{ bgcolor }}" data-color="{{ bgcolor }}" data-option={{ option.name  }}></div>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
            <!--! Font Awesome Pro 6.2.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M201.4 374.6c12.5 12.5 32.8 12.5 45.3 0l160-160c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L224 306.7 86.6 169.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l160 160z"/>
          </svg>
        </span>
      </div>
      <ul class="is_list">
        {% for color in option.values %}
          <li class="is_color is_list-item" style="background-color: {{ color }}" data-color="{{ color }}" data-option={{ option.name  }}></li>
        {% endfor %}
      </ul>
    {% else %}
      <div class="is_active_container">
        <div class="m-0 is_color is_active" style="background-color:{{ bgcolor }}" data-color="{{ bgcolor }}" data-option={{ option.name  }}></div>
      </div>
    {% endif %}
  </div>
</div>
